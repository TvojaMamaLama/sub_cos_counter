# Docker environment variables
# Copy this file to .env for docker-compose

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Telegram Bot Token (REQUIRED)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ===========================================
# DATABASE SETTINGS
# ===========================================

DATABASE_NAME=sub_cos_counter
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres_secure_password
DATABASE_PORT=5432

# Connection pool settings
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_TIME=15
DATABASE_CONN_MAX_LIFETIME=60

# ===========================================
# APPLICATION SETTINGS
# ===========================================

APP_NAME=Subscription Tracker Bot
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
APP_DEBUG=false

# ===========================================
# TELEGRAM SETTINGS
# ===========================================

# Basic settings
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=
# Set your Telegram user ID for personal bot (0 = allow all users)
TELEGRAM_ALLOWED_USER=0

# ===========================================
# LOGGING SETTINGS
# ===========================================

LOGGING_LEVEL=info
LOGGING_FORMAT=json
LOGGING_OUTPUT=stdout

# ===========================================
# DOCKER SETTINGS
# ===========================================

# Port for bot service (if using webhooks)
BOT_PORT=8080